# Use Ubuntu 22.04 as base image
FROM ubuntu:22.04

# Set root as the default user
USER root

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive

# Install dependencies and ARM toolchain
RUN apt update && apt install -y \
    build-essential \
    gcc-arm-none-eabi \
    gdb-multiarch \
    openocd \
    git \
    cmake \
    make \
    python3 \
    python3-pip \
    vim \
    screen \
    sudo \
    && rm -rf /var/lib/apt/lists/*

# Install uf2conv.py for UF2 file generation
RUN pip install uf2conv

# Set root password to 'root'
RUN echo "root:root" | chpasswd

# Set the default working directory to /home/root
WORKDIR /home/root

# Expose ports for debugging (if needed)
EXPOSE 3333 4444 22

# Default shell
CMD ["/bin/bash"]
